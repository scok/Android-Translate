<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory android:title="웹뷰 설정">

        <com.skydoves.colorpickerpreference.ColorPickerPreference
            android:key="background_color"
            android:title="번역 배경 색상"
            app:preference_attachAlphaSlideBar="false"
            app:preference_attachBrightnessSlideBar="true"
            app:preference_colorBox_radius="26dp"
            app:preference_dialog_negative="취소"
            app:preference_dialog_positive="확인"
            app:preference_selector="@drawable/wheel" />

        <com.skydoves.colorpickerpreference.ColorPickerPreference
            android:key="word_color"
            android:title="번역 문자 색상"
            app:preference_attachAlphaSlideBar="false"
            app:preference_attachBrightnessSlideBar="true"
            app:preference_colorBox_radius="26dp"
            app:preference_dialog_negative="취소"
            app:preference_dialog_positive="확인"
            app:preference_selector="@drawable/wheel" />

        <ListPreference
            android:entries="@array/array_setting"
            android:entryValues="@array/array_setting"
            android:key="border_thick"
            android:title="번역 테두리 굵기"/>

        <ListPreference
            android:entries="@array/array_setting2"
            android:entryValues="@array/array_setting2"
            android:key="border_style"
            android:title="번역 테두리 모양"/>

        <com.skydoves.colorpickerpreference.ColorPickerPreference
            android:key="border_color"
            android:title="번역 테두리 색상"
            app:preference_attachAlphaSlideBar="false"
            app:preference_attachBrightnessSlideBar="true"
            app:preference_colorBox_radius="26dp"
            app:preference_dialog_negative="취소"
            app:preference_dialog_positive="확인"
            app:preference_selector="@drawable/wheel" />
    </PreferenceCategory>

    <PreferenceCategory android:title="문서 번역 설정">
        <EditTextPreference
            android:key="edit_value"
            android:title="문서 파일 저장 위치" />

        <ListPreference
            android:entries="@array/array_setting4"
            android:entryValues="@array/array_setting4"
            android:key="image_targetLanguage"
            android:title="이미지 파일 번역 언어"/>

        <ListPreference
            android:entries="@array/array_setting3"
            android:entryValues="@array/array_setting3"
            android:key="image_extension"
            android:title="이미지 저장 시 확장자"/>
    </PreferenceCategory>
</PreferenceScreen>